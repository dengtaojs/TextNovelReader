<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TextNovelReader.Models"
             x:Class="TextNovelReader.Pages.HomePage">
    
    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>
    
    <Grid RowSpacing="10" 
          RowDefinitions="Auto, *"
          Margin="0 10">

        <VerticalStackLayout Spacing="10">
            <Label 
                Text="文件操作" 
                FontSize="Title"/>
            <HorizontalStackLayout Spacing="10">
                <Button
                    Text="打开"
                    Clicked="OpenFileButton_Clicked"/>
            </HorizontalStackLayout>

            <Label Text="阅读记录" FontSize="Title" />
        </VerticalStackLayout>

        <CollectionView x:Name="HistoryCollection" 
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChanged="HistoryCollection_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Book">
                    <SwipeView Padding="10" 
                               HeightRequest="70"
                               SwipeStarted="SwipeView_SwipeStarted"
                               SwipeEnded="SwipeView_SwipeEnded">
                        <SwipeView.RightItems>
                            <SwipeItemView>
                                <Button
                                    Text="删除"
                                    Clicked="DeleteBook"
                                    WidthRequest="80" 
                                    BackgroundColor="Red"/>
                            </SwipeItemView>
                        </SwipeView.RightItems>
                        <Label
                               Text="{Binding CollectionTitle}"
                               FontSize="Subtitle"
                               Grid.Column="1"
                               VerticalTextAlignment="Center"
                               Grid.RowSpan="2" />
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>