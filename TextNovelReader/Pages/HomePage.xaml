<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TextNovelReader.Models"
             x:Class="TextNovelReader.Pages.HomePage">

    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>

    <Grid RowSpacing="10" 
          RowDefinitions="Auto, *"
          Margin="0 10">

        <VerticalStackLayout Spacing="10">
            <Label 
                Text="文件操作" 
                FontSize="Title"/>
            <HorizontalStackLayout Spacing="10">
                <Button
                    Text="打开"
                    Clicked="OpenFileButton_Clicked"/>
            </HorizontalStackLayout>

            <Label Text="阅读记录" FontSize="Title" />
        </VerticalStackLayout>

        <CollectionView x:Name="HistoryCollection" 
                        Grid.Row="1"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Book">
                    <Border
                        Stroke="LightGray"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 8">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="Transparent" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3399ff" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <SwipeView Padding="1" HeightRequest="50">
                            <SwipeView.RightItems>
                                <SwipeItemView>
                                    <Label
                                        Text="删除"
                                        WidthRequest="80" 
                                        VerticalTextAlignment="Center"
                                        HorizontalTextAlignment="Center"
                                        FontSize="Subtitle"
                                        BackgroundColor="Red">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="DeleteBookItem_Tapped" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </SwipeItemView>
                            </SwipeView.RightItems>
                            <Label
                                Text="{Binding CollectionTitle}"
                                FontSize="Subtitle"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="BokkItem_Tapped" />
                                </Label.GestureRecognizers>
                            </Label>
                        </SwipeView>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>